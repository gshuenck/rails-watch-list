<nav class="navbar  md-5 p-3 navbar-light" style="background-color: #f0f0f0;">
  <div>
    <%= image_tag "video-player.png", alt: "#", width: 50 %>
  </div>
</nav>

<div class="container">
  <div class="d-flex justify-content-center">
    <div class="bookmark-details">
      <br><br>
      <h1><strong>Movie:</strong> <%= @bookmark.movie.title %></h1>

      <div>
        <h3>Reviews</h3>
        <%= link_to 'Add a review', new_list_bookmark_review_path(@bookmark.list, @bookmark), class: "btn btn-outline-primary mt-1" %>
        <br>
        <ul>
          <% @bookmark.reviews.each do |review| %>
            <li><%= review.comment %> <%= button_to 'delete', list_bookmark_review_path(@bookmark.list, @bookmark, review), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger mt-1" %></li>

          <% end %>
          <br>
        </ul>
          <%= link_to 'Back', list_path(@bookmark.list_id), class: "btn btn-outline-info mt-1" %>
      </div>
    </div>
  </div>
</div>
