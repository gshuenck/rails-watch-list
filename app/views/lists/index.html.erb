<nav class="navbar  md-5 p-3 navbar-light" style="background-color: #f0f0f0;">
  <div>
    <%= image_tag "video-player.png", alt: "#", width: 50 %>
  </div>
  <div>
    <button class="btn btn-outline-primary">
      <%= link_to 'New list', new_list_path %>
    </button>
  </div>
</nav>


<div class="container mt-3">
  <div class="row">
    <div class="col">
      <p>All <%= List.count %> Lists:</p>
      <div class="vertical-list">
        <% @lists.each do |list| %>
          <div class="row">
            <% if list.image.attached? %>
              <%= image_tag list.image, class: "avatar-small", alt: "avatar-small" %>
            <% else %>
              <%= image_tag 'default_image.png', class: "avatar-small", alt: "avatar-small" %>
            <% end %>
            <div class="col">
              <%= link_to list.name, list_path(list) %>
            </div>
            <div class="col ms-2">
              <%= button_to "🗑️", list_path(list), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-light btn-sm mt-1" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
