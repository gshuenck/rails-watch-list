  <div class="container mt-3">
    <div class="row">
      <div class="col">
        <p>All <%= List.count %> Lists:</p>
          <div class="vertical-list">
            <% @lists.each do |list| %>
              <div class="row">

                <div class="col">
                  <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
                  <%= link_to list.name, list_path(list) %>
                </div>
                <div class="col ms-2">
                  <%= button_to "🗑️", list_path(list), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-light btn-sm mt-1" %>
                </div>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
